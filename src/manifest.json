{
  "name": "FastForward",
  "version": "1.1.2",
  "manifest_version": 2,
  
  "description": "Opera like FastForward feature in your chrome browser.",
  
  "content_scripts": [
    {
      "js": [ "fastforward.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
    }
  ],
  "permissions": [ "tabs", "http://*/*", "https://*/*" ],
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  }
}